<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="horizontal"
  	android:id="@+id/cntBlock"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
 	>
 		<ImageView
 			android:id="@+id/blockimgIcon"
 			android:src="@drawable/icon"
 			android:layout_width="50px"
 			android:layout_height="fill_parent"
 			/> 			
 		<LinearLayout
 			android:orientation="vertical"
 			android:layout_width="100dp"
 			android:layout_height="wrap_content"
 			>
	 		<TextView
		  		android:layout_width="100dp"
		  		android:layout_height="wrap_content"
		  		android:id="@+id/blockname"
		  		android:text="naam"
		  		android:gravity="center_horizontal"
		  	/>		 		
		  	<TextView
		  		android:layout_width="100dp"
		  		android:layout_height="wrap_content"
		  		android:id="@+id/blockdescription"
		  		android:text="Beschrijving"	
		  	/>	
		  	<TextView
		  		android:id="@+id/blockLocation"
		  		android:layout_width="100dp"
		  		android:layout_height="wrap_content"
		  		android:text="EDM"
		  		/>
		</LinearLayout>
		<View style="@style/VerticalBreakLine"/>
		<TextView 
			android:id="@+id/blockStatus"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="Status"
			android:gravity="center_vertical|center_horizontal"
			/> 	

 	</LinearLayout>